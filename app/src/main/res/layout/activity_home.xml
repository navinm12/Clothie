<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/layout02"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="UselessParent">
        <android.support.v7.widget.CardView
            android:padding="10dp"
            android:id="@+id/add_product"
            app:cardCornerRadius="5dp"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/buyer_thumb" />
            <TextView
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:text="Add Product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/view_product"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            app:cardCornerRadius="5dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="25dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/buyer_thumb"/>
            <TextView
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:textSize="13sp"
                android:text="View/Edit Product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/layout02"
        android:id="@+id/layout01"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="UselessParent">
        <android.support.v7.widget.CardView
            android:padding="10dp"
            android:id="@+id/orders"
            app:cardCornerRadius="5dp"
            android:layout_width="120dp"
            android:layout_height="120dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/order"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/buyer_thumb" />
            <TextView
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:text="View Orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/order_complete"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            app:cardCornerRadius="5dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="25dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/com"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/buyer_thumb"/>
            <TextView
                android:textSize="13sp"
                android:layout_gravity="bottom"
                android:textAlignment="center"
                android:text="Orders Completed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </LinearLayout>




    <Button
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/layout01"
        android:id="@+id/logout"
        android:text="LOG OUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>