<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:text="Review Product"
        android:textSize="18sp"
        android:id="@+id/top_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Rate the product"
        android:textSize="20sp"
        android:id="@+id/text_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"/>
    <RatingBar
        android:layout_marginTop="10dp"
        android:layout_below="@+id/text_instruction"
        android:id="@+id/reviewBar"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="Your Review"
        android:id="@+id/user_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10" >
        <requestFocus />
    </EditText>
    <Button
        android:text="Add Review"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/user_review"
        android:layout_marginTop="15dp"
        android:id="@+id/upload_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>