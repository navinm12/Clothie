<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductView">

    <ImageView
        android:id="@+id/enlargeimage"
        android:layout_width="match_parent"
        android:layout_height="230dp" />

    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/productname"
        android:text="product name"
        android:textAlignment="center"
        android:layout_below="@+id/enlargeimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_below="@+id/productname"
        android:orientation="horizontal"
        android:id="@+id/productviewlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/layout_describ"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:textSize="15sp"
                android:textColor="#fff"
                android:background="#a5a5a5"
                android:text="ADD TO BAG"
                android:layout_gravity="left"
                android:id="@+id/likeproduct"
                android:layout_width="70dp"
                android:layout_height="40dp" />
            <TextView
                android:text="1"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginLeft="60dp"
                android:id="@+id/likerates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp" />
        </LinearLayout>

        <TextView
            android:text="&#8377; 200"
            android:textSize="23sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/productpricetag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp" />
        <Button
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:text="VIEW BAG"
            android:layout_marginLeft="40dp"
            android:id="@+id/addtobag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/productviewlayout1"
        android:id="@+id/productdescriplabel"
        android:textAlignment="textStart"
        android:text="Product Description"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="20dp" />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/productdescriplabel"
        android:id="@+id/productdescrip"
        android:textAlignment="center"
        android:text="this is a dummy text which is used to descript the product given above."
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/subscribe"
        android:text="SUBSCRIBE"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>