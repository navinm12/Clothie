<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView

        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/mainlayout1"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <android.support.v4.view.ViewPager
            android:id="@+id/updateView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>

        <TextView
            android:textAlignment="center"
            android:text="TOP CATEGORIES"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="215dp"
            android:id="@+id/category_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/layout0001"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/category_label"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/main_thumb_01"
                android:layout_width="200dp"
                android:src="@drawable/img7"
                android:layout_height="wrap_content" />
            <ImageView

                android:id="@+id/main_thumb_02"
                android:layout_width="200dp"
                android:src="@drawable/bt1"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/layout0001"
            android:id="@+id/layout002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="TOP OFFERS"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
<ImageView
    android:id="@+id/fg"
    android:src="@drawable/accessories1"
    android:layout_below="@+id/layout002"
    android:layout_width="match_parent"
    android:layout_height="200dp" />
    <ImageView
        android:src="@drawable/accessories2"
        android:layout_below="@+id/fg"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <ImageView
        android:src="@drawable/accessories2"
        android:layout_below="@+id/fg"
        android:id="@+id/hg"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <ImageView
        android:src="@drawable/accessories3"
        android:layout_below="@+id/hg"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</RelativeLayout>

</ScrollView>

</FrameLayout>