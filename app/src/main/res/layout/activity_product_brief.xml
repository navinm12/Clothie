<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductBrief">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/preview_image_large"
        android:layout_width="match_parent"
        android:layout_height="230dp" />

    <TextView
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/prdt_nom"
        android:text="product name"
        android:textAlignment="center"
        android:layout_below="@+id/preview_image_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_below="@+id/prdt_nom"
        android:orientation="horizontal"
        android:id="@+id/productviewlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <TextView
            android:text="&#8377; 200"
            android:textSize="23sp"
            android:layout_marginLeft="40dp"
            android:id="@+id/productpricetag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp" />
        <TextView
            android:padding="10dp"
            android:textColor="#fff"
            android:background="@color/colorPrimaryDark"
            android:text="30%"
            android:layout_marginLeft="40dp"
            android:id="@+id/prdt_disi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_below="@+id/productviewlayout1"
        android:id="@+id/layout_describ"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_quan"
            android:maxLength="2"
            android:text="0"
            android:inputType="number"
            android:layout_marginLeft="30dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp" />
        <Button
            android:background="@color/colorPrimaryDark"
            android:layout_marginLeft="15dp"
            android:id="@+id/addtobag"
            android:textSize="15sp"
            android:text="Add to bag"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layout_describ"
        android:id="@+id/productdescriplabel"
        android:textAlignment="textStart"
        android:text="Product Description"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="20dp" />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/productdescriplabel"
        android:id="@+id/productdescrip"
        android:textAlignment="center"
        android:text="this is a dummy text which is used to descript the product given above."
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:text="Reviews"
        android:textAlignment="textStart"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/productdescrip"
        android:id="@+id/review_prodcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_below="@+id/review_prodcut"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="15dp"
                android:id="@+id/add_review"
                android:textSize="13sp"
                android:text="Add a review"
                android:padding="5dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="15dp" />

            <ListView
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/add_review"
                android:id="@+id/review_list"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </RelativeLayout>

    </ScrollView>
    <Button
        android:id="@+id/cshop"
        android:text="CONTINUE SHOPPING"
        android:textSize="15sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>